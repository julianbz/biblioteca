  body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      header.main-header
        a.logo[href="index2.html"]
          span.logo-mini
            b
              | Bib
            |  Sy
          span.logo-lg
            b
              | Biblioteca
            |  Sys
        nav.navbar.navbar-static-top
          a.sidebar-toggle[data-toggle="push-menu" href="#" role="button"]
            span.sr-only
              | Toggle navigation
          .navbar-custom-menu
            ul.nav.navbar-nav
              li.dropdown.notifications-menu
                a.dropdown-toggle[data-toggle="dropdown" href="#"]
                  i.fa.fa-bell-o
                ul.dropdown-menu
                  li
                    ul.menu

                  li.footer
                    a[href="#"]
                      | View all
              li.dropdown.user.user-menu
                a.dropdown-toggle[data-toggle="dropdown" href="#"]
                  img.user-image[alt="User Image" src="../dist/img/user2-160x160.jpg"]
                  span.hidden-xs
                    | Julian Baez
                ul.dropdown-menu
                  li.user-header
                    img.img-circle[alt="User Image" src="../dist/img/user2-160x160.jpg"]
                    p
                      |  Julian Baez
                      small
                        | Estudiante en Tec. Sup. en desarrollo de software
                  li.user-footer
                    .pull-left
                      a.btn.btn-default.btn-flat[href="#"]
                        | Profile
                    .pull-right
                      a.btn.btn-default.btn-flat[href="#"]
                        | Sign out
      aside.main-sidebar
        section.sidebar
          ul.sidebar-menu[data-widget="tree"]
            li.header
              | MENU PRINCIPAL
            li.treeview
              a[href="#"]
                i.fa.fa-edit
                span
                  | Alquileres
                span.pull-right-container
                  i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a[href="../alquiler/new"]
                    i.fa.fa-circle-o
                    |  Nuevo
                li
                  a[href="../alquiler/all"]
                    i.fa.fa-circle-o
                    |  Ver todos
            li.treeview
              a[href="#"]
                i.fa.fa-th
                span
                  | Libros
                span.pull-right-container
                  i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a[href="../book/new"]
                    i.fa.fa-circle-o
                    |  Nuevo
                li
                  a[href="../book/all"]
                    i.fa.fa-circle-o
                    |  Ver todos
            li.treeview
              a[href="#"]
                i.fa.fa-user
                span
                  | Usuarios
                span.pull-right-container
                  i.fa.fa-angle-left.pull-right
              ul.treeview-menu
                li
                  a[href="../client/new"]
                    i.fa.fa-circle-o
                    |  Nuevo
                li
                  a[href="../"]
                    i.fa.fa-circle-o
                    |  Ver todos
      .content-wrapper
        section.content-header
          h1
            |  Alquiler
            small
              | Detalle del alquiler
          ol.breadcrumb

        br
        .col-xs-6
          .table-responsive
            table.table
              tr
                th[style="width:50%"]
                  | Libro:
                td
                  = @alquiler.book.titulo
              tr
                th
                  | Cliente:
                td
                  = @cliente.nombre
              tr
                th
                  | Fecha de creacion:
                td
                  = @alquiler.created_at
              tr
                th
                  | Fecha de devolucion:
                td
                  = @alquiler.fecha_devolucion
              tr
                td
                  a.btn.btn-primary[type="submit" href="/alquiler/edit/#{@alquiler.id}"]
                    | Editar
                  a.btn.btn-primary[type="submit" href="/alquiler/ver/#{@alquiler.id}/delete"]
                    | Eliminar
        .clearfix
      footer.main-footer
        .pull-right.hidden-xs
