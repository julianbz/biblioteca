                            |  Masculino
                        .radio
                          label
                            input#optionsRadios2[type="radio" name="sexo" value="Femenino"]
                            |  Femenino
                      .form-group
                        label[for="exampleInputEmail1"]
                          | Numero de telefono:
                        input#exampleInputEmail1.form-control[name="telefono" value=@client.telefono]
                      .form-group
                        label[for="exampleInputEmail1"]
                          | Domicilio:
                        input#exampleInputEmail1.form-control[name="domicilio" value=@client.direccion]
                      .form-group
                        label[for="exampleInputEmail1"]
                          | Ciudad:
                        input#exampleInputEmail1.form-control[name="ciudad" value=@client.ciudad]
